---
export interface Props {
	items: string[]
}

const { items } = Astro.props
---

<nav
	class='fixed bottom-0 md:bottom-auto md:top-0 left-0 z-20 w-full flex place-items-center gap-6 px-3 py-2 bg-slate-900/50 backdrop-blur shadow'
>
	<span
		class='text-2xl bg-clip-text text-transparent bg-gradient-to-r from-purple-600 to-rose-600 bg-[length:200%]'
		>Korazza</span
	>
	<ul class='flex gap-6'>
		{
			items.map((item) => (
				<li>
					<a
						class='cursor-pointer bg-clip-text text-transparent bg-gradient-to-r from-slate-100 via-rose-300 to-purple-300 bg-[length:300%] transition-[background-position] ease-in-out duration-300 hover:bg-[100%]'
						href={`#${item.toLowerCase()}`}
					>
						{item}
					</a>
				</li>
			))
		}
	</ul>
</nav>
