---
import Icon from 'astro-icon'

export interface Props {
	title: string
	body: string
	href: string
}

const { href, title, body } = Astro.props
---

<div
	class='group flex p-[0.1rem] h-full bg-gradient-to-r from-slate-700 via-purple-700 to-rose-700 bg-[length:500%] bg-[0] text-slate-100 rounded-lg shadow shadow-slate-800 transition-all ease-in-out duration-500 hover:bg-[100%] hover:shadow-lg hover:shadow-slate-800/50'
>
	<a
		class='text-slate-100 w-full no-underline line leading-6 px-2 py-1 rounded-md bg-slate-700 opacity-80'
		target='_blank'
		href={href}
	>
		<h2
			class='m-0 text-xl font-mono text-slate-100 group-hover:text-rose-700 transition-colors ease-in-out duration-300'
		>
			{title}
			<Icon
				class='inline w-5 md:group-hover:animate-pulse'
				name='ion:arrow-forward'
			/>
		</h2>
		<p class='text-slate-400 group-hover:text-slate-300 transition-colors ease-in-out duration-300'>
			{body}
		</p>
	</a>
</div>
